{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["data"],
    "properties": {
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "portraits"],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "portraits": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["id"],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "offsetX": {
                                    "type": "number"
                                },
                                "offsetY": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
} 
